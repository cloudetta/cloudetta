{
  email admin@example.com
}

# ---------- Django ----------
django.localhost, django.example.com {
  reverse_proxy django:8000
}

# ---------- Odoo ----------
odoo.localhost, odoo.example.com {
  reverse_proxy odoo:8069
}

# ---------- Redmine ----------
redmine.localhost, redmine.example.com {
  reverse_proxy redmine:3000
}

# ---------- DokuWiki (protetto da Basic Auth unificata) ----------
wiki.localhost, wiki.example.com {
  basicauth /* {
    {$ADMIN_USER} {$WIKI_BCRYPT_HASH}
  }
  reverse_proxy dokuwiki:80
}

# ---------- Nextcloud ----------
nextcloud.localhost, nextcloud.example.com {
  reverse_proxy nextcloud:80
}

# ---------- n8n ----------
n8n.localhost, n8n.example.com {
  reverse_proxy n8n:5678
}
